	Helpers
		
		letra = [['a' .. 'z'] + ['A' .. 'Z']];
		digito = ['0' .. '9'];
		cr = 13 ;
		lf = 10 ;
		tab = 9 ;
		qualquer_caractere = [0x0 .. 0xfffff] ;
	
	States
		normal,
		comment;
		
	Tokens
	
	// Pontuação
		{normal} doispontos = ':';
		{normal} pontoevirg = ';';
		{normal} ponto = '.';
		{normal} virg = ',';
	//	underscore = '_';
		
		{normal} aprentese = '(';
		{normal} fparentese = ')';
		
		{normal} mais = '+';
		{normal} menos = '-';
		{normal} mult = '*';
		{normal} div = '/';
		
		{normal} maiorq = '>';
		{normal} menorq = '<';
		{normal} maiorigual = '>=';
		{normal} menorigual = '<=';
		{normal} igual = '=';
		{normal} diferente = '<>';
		{normal} atrib = '<-';
		
		{normal} nao = 'nao';
		{normal} e = 'e';
		{normal} ou = 'ou';
		
		{normal} lbreak = ( cr | lf | cr lf);
		{normal} tab = tab;
		{normal} espaco = ' ';
		

	//Palavras reservadas
		{normal} string = 'caractere';
		{normal} inteiro = 'inteiro';
		{normal} real = 'real';
		{normal} inicio = 'inicio';
		{normal} programa = 'programa';
		{normal} fimprograma = 'fim.';
		{normal} se = 'se';
		{normal} senao = 'senao';
		{normal} enquanto = 'enquanto';
		{normal} repita = 'repita';
		{normal} para = 'para';
		{normal} avalie = 'avalie';
		{normal} caso = 'caso';
		{normal} verdadeiro = 'verdadeiro';
		{normal} falso = 'falso';
		{normal} booleano = 'booleano';
		{normal} escreva = 'escreva';
		{normal} leia = 'leia';

	//Outros
	
		{normal} id = (letra | '_') (letra | digito | '_')*;
		
		{normal} texto = ''' qualquer_caractere ''' ;
		 
		{normal} num = digito+ ;
		 
		{normal} numreal = digito+ ',' digito+ ;
		
		{normal} blank = (' ' | cr | lf | tab);
		
	//Comentários
		{normal} comentariolinha = '//' [qualquer_caractere - [cr + lf]]+ (cr|lf)? ;
		
		{normal->comment, comment}
			comment = '/*';
		
		{comment} comment_end = '*/';
		{comment} comment_body = [qualquer_caractere - ['*' + '/']]*;
		
		 
	 Ignored Tokens
	
		comentariolinha,
//		comentarioblococomeco,
//		comentarioblococonteudo,
//		comentarioblocofim,
		blank;